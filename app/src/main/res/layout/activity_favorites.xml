<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.brusdev.friendluancher.FavoritesActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <Button
            android:id="@+id/favourite1Button"
            android:backgroundTint="@color/favourites_background"
            android:drawableLeft="@drawable/ic_filter_list_white_48dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:textColor="@color/md_white_1000"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:text="@string/app" />
        <Button
            android:id="@+id/favourite2Button"
            android:backgroundTint="@color/favourites_background"
            android:drawableLeft="@drawable/ic_filter_list_white_48dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:textColor="@color/md_white_1000"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:text="@string/app" />
        <Button
            android:id="@+id/favourite3Button"
            android:backgroundTint="@color/favourites_background"
            android:drawableLeft="@drawable/ic_filter_list_white_48dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:textColor="@color/md_white_1000"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:text="@string/app" />
        <Button
            android:id="@+id/favourite4Button"
            android:backgroundTint="@color/favourites_background"
            android:drawableLeft="@drawable/ic_filter_list_white_48dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAllCaps="true"
            android:textColor="@color/md_white_1000"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:text="@string/app" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
